<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-4 align-items-center justify-content-center text-center">
            <img src={{image}} alt="{{image}} cover" width="310px">
        </div>

        <div class="col-8">
            <h1>{{title}}</h1>
            </br>
            <h4>Director: {{director}}</h4>
            </br>
            <ul class="detailList">
                {{#each stars}}
                <li>
                    <p class="fs-5"> {{this}} </p>
                </li>
                {{/each}}
            </ul>
            </br>
            <p class="text-muted fst-italic">
                "{{description}}"
            </p>

            <p class="spanDetail">
                Showtimes at | {{#each showtimes}}
                {{this}} |
                {{/each}}
            </p>

            <a href="/" type="button" class="btn btn-dark"> Home </a>
            <a href="/movies" type="button" class="btn btn-dark"> Go back </a>
        </div>

    </div>
</div>